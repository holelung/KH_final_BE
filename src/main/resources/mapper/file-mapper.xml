<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kh.saintra.file.model.dao.FileMapper">

	<insert id="insertFileInfo"
			parameterType="com.kh.saintra.file.model.dto.FileDTO">
		INSERT INTO
			TB_FILE
			(
				FILENAME,
				ORIGIN
			)
		VALUES
			(
				#{filename},
				#{origin}
			)
	</insert>
	
	<select id="selectFileInfo"
			parameterType="com.kh.saintra.file.model.dto.FileDTO"
			resultType="com.kh.saintra.file.model.vo.FileVO">
		SELECT
			ID,
			FILENAME,
			ORIGIN
		FROM
			TB_FILE
		WHERE
			FILENAME = #{filename}
		AND
			ORIGIN = #{origin}
	</select>
	
	<select id="selectFileInfoById"
			parameterType="string"
			resultType="com.kh.saintra.file.model.vo.FileVO">
		SELECT
			ID,
			FILENAME,
			ORIGIN
		FROM
			TB_FILE
		WHERE
			ID = #{fileId}
	</select>
	
	<delete id="deleteFileInfo"
			parameterType="long">
		DELETE
		FROM
			TB_FILE
		WHERE
			ID = #{fileId}
	</delete>
	
</mapper>